<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.circuitos.k9.carro.com.circuitos.k9.carro.app.Creditos">

    <TextView android:text="Creditos" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/creditos"
        android:textIsSelectable="false"
        android:textSize="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplicacion desarrollada por:"
        android:id="@+id/textView"
        android:textSize="26dp"
        android:layout_below="@+id/creditos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konrad Jimenez"
        android:id="@+id/textView2"
        android:textIsSelectable="false"
        android:textSize="26dp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Circuitos Digitales II-2015"
        android:id="@+id/textView5"
        android:textSize="26dp"
        android:layout_below="@+id/textView7"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escuela de Computacion"
        android:id="@+id/textView6"
        android:textIsSelectable="false"
        android:textSize="26dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Universidad de Costa Rica"
        android:id="@+id/textView7"
        android:textIsSelectable="false"
        android:textSize="26dp"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:textStyle="bold" />


</RelativeLayout>
